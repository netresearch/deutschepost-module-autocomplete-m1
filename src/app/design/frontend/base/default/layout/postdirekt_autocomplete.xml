<layout version="0.1.0">
    <postdirekt_autocomplete_handle>
        <reference name="head">
            <action method="addJs" ifconfig="customer/postdirekt_autocomplete/active"><script>postdirekt_autocomplete/autocomplete-handler.js</script></action>
            <action method="addJs" ifconfig="customer/postdirekt_autocomplete/active"><script>postdirekt_autocomplete/model/autocomplete-fields.js</script></action>
            <action method="addJs" ifconfig="customer/postdirekt_autocomplete/active"><script>postdirekt_autocomplete/model/request-adapter.js</script></action>
            <action method="addJs" ifconfig="customer/postdirekt_autocomplete/active"><script>postdirekt_autocomplete/view/datalist-renderer.js</script></action>
            <action method="addJs" ifconfig="customer/postdirekt_autocomplete/active"><script>postdirekt_autocomplete/model/autocomplete-address-suggestions.js</script></action>
             <action method="addJs" ifconfig="customer/postdirekt_autocomplete/active"><script>postdirekt_autocomplete/model/autocomplete-address-data.js</script></action>
            <action method="addJs" ifconfig="customer/postdirekt_autocomplete/active"><script>postdirekt_autocomplete/action/search-request.js</script></action>
            <action method="addJs" ifconfig="customer/postdirekt_autocomplete/active"><script>postdirekt_autocomplete/action/select-request.js</script></action>
            <action method="addJs" ifconfig="customer/postdirekt_autocomplete/active"><script>postdirekt_autocomplete/action/datalist-select.js</script></action>
            <action method="addJs" ifconfig="customer/postdirekt_autocomplete/active"><script>postdirekt_autocomplete/action/field-input.js</script></action>
            <action method="addJs" ifconfig="customer/postdirekt_autocomplete/active"><script>postdirekt_autocomplete/model/country-select.js</script></action>
            <action method="addJs" ifconfig="customer/postdirekt_autocomplete/active"><script>postdirekt_autocomplete/view/list-renderer.js</script></action>
            <action method="addCss" ifconfig="customer/postdirekt_autocomplete/active">
                <stylesheet>css/postdirekt_autocomplete/polyfill.css</stylesheet>
            </action>
        </reference>
    </postdirekt_autocomplete_handle>

    <checkout_onepage_index module="page">
        <update handle="postdirekt_autocomplete_handle" />

        <reference name="before_body_end">
            <block type="postdirekt_autocomplete/addressHandler" name="postdirekt.autocomplete_checkout"
                   template="postdirekt_autocomplete/handler_checkout.phtml" >
            </block>
        </reference>
    </checkout_onepage_index>

    <customer_address_form module="page">
        <update handle="postdirekt_autocomplete_handle" />

        <reference name="before_body_end">
            <block type="postdirekt_autocomplete/addressHandler" name="postdirekt.autocomplete_customer"
                   template="postdirekt_autocomplete/handler_customer.phtml" >
            </block>
        </reference>
    </customer_address_form>
</layout>
